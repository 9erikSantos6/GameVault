                <table class="table table-hover mt-3">
                    <thead><tr><th>Jogo</th><th>Com Quem Est√°</th><th>Data</th><th>Status</th></tr></thead>
                    <tbody>
                        <% emprestimosFeitos.forEach(e => { %>
