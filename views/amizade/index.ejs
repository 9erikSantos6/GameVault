<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameVault - Amigos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/amizade.css">
    <style>
        .bg-purple-sidebar { background-color: #5a009d !important; min-height: 100vh; min-width: 250px; }
        .nav-link:hover, .nav-link.active { background-color: rgba(255, 255, 255, 0.2) !important; }
    </style>
</head>
<body class="d-flex bg-light">

    <nav class="bg-purple-sidebar p-3 text-white shadow">
        <div class="fs-4 fw-bold mb-4 mt-2 px-2">ğŸ® GAMEVAULT</div>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item"><a href="/dashboard" class="nav-link text-white">ğŸ  Dashboard</a></li>
            <li><a href="/amizade" class="nav-link active text-white">ğŸ‘¥ Amigos</a></li>
            <li><a href="/emprestimos" class="nav-link text-white">ğŸ¤ EmprÃ©stimos</a></li>
        </ul>
    </nav>

    <main class="flex-grow-1 p-5">
        <div class="card border-0 shadow-sm mb-4 p-4 rounded-4">
            <h5 class="fw-bold mb-4">Enviar SolicitaÃ§Ã£o de Amizade</h5>
            <form action="/amizade/solicitar" method="POST" class="row g-2">
                <div class="col">
                    <input type="email" name="email" class="form-control form-control-lg bg-light" placeholder="Digite o e-mail" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary btn-lg px-4" style="background-color: #5a009d; border: none;">Enviar</button>
                </div>
            </form>
        </div>

        <div class="card border-0 shadow-sm mb-4 p-4 rounded-4">
            <h5 class="fw-bold mb-4">SolicitaÃ§Ãµes de Amizade Pendentes</h5>
            <% if (typeof solicitacoes !== 'undefined') { %>
                <% solicitacoes.forEach(sol => { %>
                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-2">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-10 p-2 rounded">ğŸ‘¤</div>
                            <span class="fw-medium">@<%= sol.usuario.email %></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success px-3">Aceitar</button>
                            <button class="btn btn-danger px-3">Recusar</button>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="card border-0 shadow-sm p-4 rounded-4">
            <h5 class="fw-bold mb-4">Meus Amigos</h5>
            <% if (typeof amigos !== 'undefined') { %>
                <% amigos.forEach(amigo => { %>
                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-2">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-10 p-2 rounded">ğŸ‘¤</div>
                            <span class="fw-medium">@<%= amigo.email %></span>
                        </div>
                        <a href="/amizade/editar/<%= amigo.id %>" class="btn btn-danger px-4">Excluir</a>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </main>
</body>
</html>