<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameLink - Amigos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/amizade.css">
</head>
<body class="d-flex bg-light" style="min-height: 100vh;">

    <nav class="sidebar flex-shrink-0 p-3 text-white">
        <div class="brand d-flex align-items-center mb-4">
            <span class="fs-4 fw-bold">üéÆ GameLink</span>
        </div>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="/dashboard" class="nav-link text-white">üè† Dashboard</a>
            </li>
            <li>
                <a href="/amizade" class="nav-link active">üë• Amigos</a>
            </li>
            <li>
                <a href="/emprestimos" class="nav-link text-white">ü§ù Empr√©stimos</a>
            </li>
        </ul>
    </nav>

    <main class="flex-grow-1 p-5">
        
        <div class="card border-0 shadow-sm mb-4 p-4 rounded-4">
            <h5 class="fw-bold mb-4">Enviar Solicita√ß√£o de Amizade</h5>
            <form action="/amizade/solicitar" method="POST" class="row g-2">
                <div class="col">
                    <input type="email" name="email" class="form-control form-control-lg bg-light" placeholder="Digite o e-mail" required>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Enviar</button>
                </div>
            </form>
            <div class="mt-3">
                <p class="mb-1 text-warning fw-bold">joao@email.com ‚Äî PENDENTE</p>
                <p class="mb-1 text-primary fw-bold">lucas@email.com ‚Äî ACEITA</p>
                <p class="mb-1 text-danger fw-bold">carla@email.com ‚Äî RECUSADA</p>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4 p-4 rounded-4">
            <h5 class="fw-bold mb-4">Solicita√ß√µes de Amizade Pendentes</h5>
            <% if (typeof solicitacoes !== 'undefined') { %>
                <% solicitacoes.forEach(sol => { %>
                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-2">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-10 p-2 rounded">üë§</div>
                            <span class="fw-medium"><%= sol.usuario.email %></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-success px-3">Aceitar</button>
                            <button class="btn btn-danger px-3">Recusar</button>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="card border-0 shadow-sm p-4 rounded-4">
            <h5 class="fw-bold mb-4">Meus Amigos</h5>
            <div class="mb-4">
                <div class="input-group">
                    <span class="input-group-text bg-light border-end-0">üîç</span>
                    <input type="text" class="form-control bg-light border-start-0" placeholder="Buscar amigo">
                </div>
            </div>
            <% if (typeof amigos !== 'undefined') { %>
                <% amigos.forEach(amigo => { %>
                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-2">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-10 p-2 rounded">üë§</div>
                            <span class="fw-medium"><%= amigo.email %></span>
                        </div>
                        <button class="btn btn-danger px-4">Excluir</button>
                    </div>
                <% }) %>
            <% } %>
        </div>

    </main>

</body>
</html>